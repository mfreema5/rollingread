= form_for @assignment do |f|
  - if @assignment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@assignment.errors.count, "error")} prohibited this assignment from being saved:"
      %ul
        - @assignment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :short_assignment
    = f.text_field :short_assignment
  .field
    = f.label :assignment_details
    = f.text_area :assignment_details
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :due_date
    = f.date_select :due_date
  .field
    = f.label :completed
    = f.date_select :completed
  .field
    = f.label :source
    = f.text_field :source
  .actions
    = f.submit 'Save'
