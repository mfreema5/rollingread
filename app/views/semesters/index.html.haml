%h1 Listing semesters

%table
  %thead
    %tr
      %th Short semester
      %th Full semester
      %th Start date
      %th End date
      %th User ID
      %th
      %th
      %th
      
  %tbody
    - @semesters.each do |semester|
      %tr
        %td= semester.short_semester
        %td= semester.full_semester
        %td= semester.start_date
        %td= semester.end_date
        %td= semester.user_id
        %td= link_to 'Show', semester
        %td= link_to 'Edit', edit_semester_path(semester)
        %td= link_to 'Destroy', semester, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

%p= link_to 'New Semester', new_semester_path

= render 'shared/nav_footer'
